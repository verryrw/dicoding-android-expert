<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.verryrw.carapp.core.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFishFragment"
            app:destination="@id/detailCarFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFishFragment"
        android:name="com.verryrw.carapp.core.presentation.favorite.FavoriteCarFragment"
        android:label="fragment_favorite_fish"
        tools:layout="@layout/fragment_favorite_car" >
        <action
            android:id="@+id/action_favoriteFishFragment_to_detailCarFragment"
            app:destination="@id/detailCarFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.verryrw.carapp.core.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/detailCarFragment"
        android:name="com.verryrw.carapp.core.presentation.detail.DetailCarFragment"
        android:label="fragment_detail_fish"
        tools:layout="@layout/fragment_detail_car" >
        <argument
            android:name="car"
            app:argType="com.verryrw.carapp.core.domain.models.Car" />
    </fragment>
</navigation>